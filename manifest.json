{
  "manifest_version": 2,
  "name": "Twitch following | Who is streaming?",
  "version": "1.6",
  "short_name": "Twitch following",
  "description": "Extension that lists all of you favourite streamers you are currently following.",
  "content_security_policy": "script-src 'self' https://api.twitch.tv/kraken/; object-src 'self'",
  "options_page": "options.html",
  "browser_action": {
    "default_popup": "popup.html"
    },
    "background": {
      "scripts": ["js/jquery.min.js", "js/event.js"],
      "persistent": false
      },
      "permissions": [
      "activeTab",
      "storage",
      "alarms",
      "background"
      ]
    }